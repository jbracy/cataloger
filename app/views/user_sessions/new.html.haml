%header
  %h1 Login
  %ul
    %li= link_to "Forgot Password?", '/reset_password' # new_reset_password_path(@instance)
  
= form_for @user_session, :url => user_session_path do |f|
  - if !@user_session.errors.empty?
    .error_messages
      %h2 Invalid Credentials
  %table
    %tr
      %td= f.label(:username)
      %td= f.text_field :username
    %tr
      %td= f.label(:password)
      %td= f.password_field(:password)
    %tr
      %td{:style => 'font-weight: normal;'}= f.check_box(:remember_me) + " " + f.label(:remember_me)
      %td{:style => 'text-align: right;'}= f.submit "Login"